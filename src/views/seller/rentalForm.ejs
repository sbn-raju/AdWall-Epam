<% layout('layouts/layout') %> 

<link rel="stylesheet" href="/css/seller/rentalForm.styles.css">

<div class="form-container">

    <div class="header-back-button">
        <button type="button" class="btn-back" onclick="goBack()">â¬… Back</button>
        <h2>Post Your Advertisement Wall</h2>
    </div>

    
    <form action="/ads/post" method="POST" enctype="multipart/form-data" class="grid-form">

        <!-- Ad Name -->
        <div class="input-group">
            <label for="adName">Ad Name</label>
            <input type="text" id="adName" name="adName" placeholder="Enter ad title" required>
        </div>

        <!-- Upload Wall Picture -->
        <div class="input-group">
            <label for="wallImage">Upload Wall Picture</label>
            <input type="file" id="wallImage" name="wallImage" accept="image/*" required>
        </div>

        <!-- Rent Price -->
        <div class="input-group">
            <label for="rentPrice">Rent Price (per month)</label>
            <input type="number" id="rentPrice" name="rentPrice" placeholder="Enter price in USD" required>
        </div>

        <!-- Dimensions of Wall -->
        <div class="input-group">
            <label for="dimensions">Wall Dimensions (in feet)</label>
            <input type="text" id="dimensions" name="dimensions" placeholder="e.g., 10x20" required>
        </div>

        <!-- Location -->
        <div class="input-group">
            <label for="location">Location</label>
            <input type="text" id="location" name="location" placeholder="Enter address or city" required>
        </div>

        <!-- Expected Traffic -->
        <div class="input-group">
            <label for="traffic">Expected Traffic (per day)</label>
            <input type="number" id="traffic" name="traffic" placeholder="Estimated footfall" required>
        </div>

        <!-- Submit Button (Spans Full Width) -->
        <div class="full-width">
            <button type="submit" class="btn">Submit Ad</button>
        </div>
    </form>
</div>


<!-- JavaScript for Back Navigation -->
<script>
    function goBack() {
        window.history.back(); // Takes user back to the previous page
    }
</script>
